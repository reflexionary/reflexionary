# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_NAME=gemini-1.5-flash

# Firebase Configuration (for persistent storage)
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=path/to/your/firebase-service-account-key.json

# Embedding Model Configuration
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Annoy Index Configuration
ANNOY_INDEX_DIR=annoy_indexes
ANNOY_N_TREES=10

# Application Settings
LOG_LEVEL=INFO
API_TIMEOUT=30

# Fi-MCP Simulator Configuration (optional for testing)
FI_MCP_SIMULATOR_BASE_URL=http://127.0.0.1:5000
FI_MCP_SIMULATOR_API_KEY=your_simulator_api_key_here

# Anomaly Detection Configuration
ANOMALY_DETECTION_THRESHOLD_PERCENT=20.0
ANOMALY_BASELINE_WINDOW_TXNS=30

